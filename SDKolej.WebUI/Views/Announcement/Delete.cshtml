@model SDKolej.Business.DTOs.AnnouncementDto
@{
    ViewData["Title"] = "Duyuru Sil";
}
<h2>Duyuru Sil</h2>
<div class="alert alert-danger">
    <p>Bu duyuruyu silmek istediğinize emin misiniz?</p>
    <dl class="row">
        <dt class="col-sm-2">Başlık</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">İçerik</dt>
        <dd class="col-sm-10">@Model.Content</dd>
        <dt class="col-sm-2">Tarih</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div> 