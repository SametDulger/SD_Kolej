@model SDKolej.Business.DTOs.MessageDto

@{
    ViewData["Title"] = "Delete Message";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Delete Message</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Are you sure you want to delete this message?</h4>
                    </div>
                    
                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Id)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SenderId)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.SenderId)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ReceiverId)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ReceiverId)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Subject)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Subject)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Content)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Content)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SentDate)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.SentDate)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsRead)</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsRead)
                            {
                                <span class="badge bg-success">Read</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Unread</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 