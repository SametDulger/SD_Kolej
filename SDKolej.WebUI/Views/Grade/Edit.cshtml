@model SDKolej.Business.DTOs.GradeDto
@{
    ViewData["Title"] = "Not Düzenle";
}
<h2>Not Düzenle</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="StudentId" class="form-label"></label>
        <input asp-for="StudentId" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="CourseId" class="form-label"></label>
        <input asp-for="CourseId" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Score" class="form-label"></label>
        <input asp-for="Score" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form> 