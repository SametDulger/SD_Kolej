@model List<SDKolej.Business.DTOs.GradeDto>
@{
    ViewData["Title"] = "Not Listesi";
}
<h2>Not Listesi</h2>
<a class="btn btn-primary mb-2" asp-action="Create">Yeni Not</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Öğrenci</th>
            <th>Ders</th>
            <th>Not</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.StudentId</td>
            <td>@item.CourseId</td>
            <td>@item.Score</td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table> 