@model SDKolej.Business.DTOs.EnrollmentDto
@{
    ViewData["Title"] = "Kayıt Sil";
}
<h2>Kayıt Sil</h2>
<div class="alert alert-danger">
    <p>Bu kaydı silmek istediğinize emin misiniz?</p>
    <dl class="row">
        <dt class="col-sm-2">Öğrenci</dt>
        <dd class="col-sm-10">@Model.StudentId</dd>
        <dt class="col-sm-2">Sınıf</dt>
        <dd class="col-sm-10">@Model.ClassId</dd>
        <dt class="col-sm-2">Yıl</dt>
        <dd class="col-sm-10">@Model.Year</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div> 