@model DashboardViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="jumbotron bg-primary text-white rounded p-4">
                <h1 class="display-4">
                    <i class="fas fa-graduation-cap"></i> SD Kolej Yönetim Sistemine Hoş Geldiniz
                </h1>
                <p class="lead">ASP.NET Core ve SOLID prensipleri ile geliştirilmiş kapsamlı okul yönetim sistemi.</p>
                <hr class="my-4">
                <p>Öğrencileri, öğretmenleri, sınıfları, dersleri, notları ve daha fazlasını kolay kullanımlı arayüzümüzle yönetin.</p>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-primary h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Öğrenciler</h5>
                            <p class="card-text display-6">@Model.StudentCount</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-graduate fa-3x"></i>
                        </div>
                    </div>
                    <a asp-controller="Student" asp-action="Index" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-right"></i> Öğrencileri Yönet
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-success h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Öğretmenler</h5>
                            <p class="card-text display-6">@Model.TeacherCount</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-chalkboard-teacher fa-3x"></i>
                        </div>
                    </div>
                    <a asp-controller="Teacher" asp-action="Index" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-right"></i> Öğretmenleri Yönet
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-info h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Sınıflar</h5>
                            <p class="card-text display-6">@Model.ClassCount</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-chalkboard fa-3x"></i>
                        </div>
                    </div>
                    <a asp-controller="Class" asp-action="Index" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-right"></i> Sınıfları Yönet
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-warning h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Dersler</h5>
                            <p class="card-text display-6">@Model.CourseCount</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-book fa-3x"></i>
                        </div>
                    </div>
                    <a asp-controller="Course" asp-action="Index" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-right"></i> Dersleri Yönet
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-users"></i> Kişi Yönetimi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a asp-controller="Student" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-user-graduate text-primary"></i>
                                <span class="ms-2">Öğrenciler</span>
                            </div>
                            <span class="badge bg-primary rounded-pill">@Model.StudentCount</span>
                        </a>
                        <a asp-controller="Teacher" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-chalkboard-teacher text-success"></i>
                                <span class="ms-2">Öğretmenler</span>
                            </div>
                            <span class="badge bg-success rounded-pill">@Model.TeacherCount</span>
                        </a>
                        <a asp-controller="Parent" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-user-friends text-info"></i>
                                <span class="ms-2">Veliler</span>
                            </div>
                            <span class="badge bg-info rounded-pill">@Model.ParentCount</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-school"></i> Akademik Yönetim
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a asp-controller="Class" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-chalkboard text-primary"></i>
                                <span class="ms-2">Sınıflar</span>
                            </div>
                            <span class="badge bg-primary rounded-pill">@Model.ClassCount</span>
                        </a>
                        <a asp-controller="Course" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-book text-warning"></i>
                                <span class="ms-2">Dersler</span>
                            </div>
                            <span class="badge bg-warning rounded-pill">@Model.CourseCount</span>
                        </a>
                        <a asp-controller="Enrollment" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-user-plus text-success"></i>
                                <span class="ms-2">Kayıtlar</span>
                            </div>
                            <span class="badge bg-success rounded-pill">@Model.EnrollmentCount</span>
                        </a>
                        <a asp-controller="Grade" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-star text-warning"></i>
                                <span class="ms-2">Notlar</span>
                            </div>
                            <span class="badge bg-warning rounded-pill">@Model.GradeCount</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-clipboard-list"></i> Okul Yönetimi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a asp-controller="Absence" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-calendar-times text-danger"></i>
                                <span class="ms-2">Devamsızlıklar</span>
                            </div>
                            <span class="badge bg-danger rounded-pill">@Model.AbsenceCount</span>
                        </a>
                        <a asp-controller="Announcement" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-bullhorn text-info"></i>
                                <span class="ms-2">Duyurular</span>
                            </div>
                            <span class="badge bg-info rounded-pill">@Model.AnnouncementCount</span>
                        </a>
                        <a asp-controller="Message" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-envelope text-primary"></i>
                                <span class="ms-2">Mesajlar</span>
                            </div>
                            <span class="badge bg-primary rounded-pill">@Model.MessageCount</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-file"></i> Belge Yönetimi
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a asp-controller="Document" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-file-alt text-success"></i>
                                <span class="ms-2">Belgeler</span>
                            </div>
                            <span class="badge bg-success rounded-pill">@Model.DocumentCount</span>
                        </a>
                        <a asp-controller="FileUpload" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-upload text-warning"></i>
                                <span class="ms-2">Dosya Yüklemeleri</span>
                            </div>
                            <span class="badge bg-warning rounded-pill">@Model.FileUploadCount</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-building"></i> Yönetim
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a asp-controller="Branch" asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <i class="fas fa-building text-primary"></i>
                                <span class="ms-2">Şubeler</span>
                            </div>
                            <span class="badge bg-primary rounded-pill">@Model.BranchCount</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
