@model SDKolej.Business.DTOs.TeacherCourseDto

@{
    ViewData["Title"] = "Öğretmen-Ders Detayları";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-user-tie me-2"></i>
                        Öğretmen-Ders Detayları
                    </h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Öğretmen ID:</dt>
                        <dd class="col-sm-9">@Model.TeacherId</dd>

                        <dt class="col-sm-3">Ders ID:</dt>
                        <dd class="col-sm-9">@Model.CourseId</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i>
                        Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Listeye Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 