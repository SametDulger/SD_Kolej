@model SDKolej.Business.DTOs.StudentDto
@{
    ViewData["Title"] = "Öğrenci Düzenle";
}
<h2>Öğrenci Düzenle</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="SchoolNumber" class="form-label"></label>
        <input asp-for="SchoolNumber" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="RegistrationDate" class="form-label"></label>
        <input asp-for="RegistrationDate" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ClassId" class="form-label"></label>
        <input asp-for="ClassId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form> 