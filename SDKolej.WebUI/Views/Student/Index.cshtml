@model List<SDKolej.Business.DTOs.StudentDto>
@{
    ViewData["Title"] = "Öğrenci Listesi";
}
<h2>Öğrenci Listesi</h2>
<a class="btn btn-primary mb-2" asp-action="Create">Yeni Öğrenci</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Okul No</th>
            <th>Kayıt Tarihi</th>
            <th>Sınıf</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.SchoolNumber</td>
            <td>@(item.RegistrationDate?.ToShortDateString() ?? "-")</td>
            <td>@item.ClassId</td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table> 