@model SDKolej.Business.DTOs.AbsenceDto
@{
    ViewData["Title"] = "Devamsızlık Düzenle";
}
<h2>Devamsızlık Düzenle</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="StudentId" class="form-label"></label>
        <input asp-for="StudentId" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="IsExcused" class="form-label"></label>
        <input asp-for="IsExcused" type="checkbox" class="form-check-input" />
    </div>
    <div class="mb-3">
        <label asp-for="IsDutyStudent" class="form-label"></label>
        <input asp-for="IsDutyStudent" type="checkbox" class="form-check-input" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form> 