@model SDKolej.Business.DTOs.AbsenceDto
@{
    ViewData["Title"] = "Devamsızlık Sil";
}
<h2>Devamsızlık Sil</h2>
<div class="alert alert-danger">
    <p>Bu devamsızlığı silmek istediğinize emin misiniz?</p>
    <dl class="row">
        <dt class="col-sm-2">Öğrenci</dt>
        <dd class="col-sm-10">@Model.StudentId</dd>
        <dt class="col-sm-2">Tarih</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
        <dt class="col-sm-2">Raporlu</dt>
        <dd class="col-sm-10">@Model.IsExcused</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div> 