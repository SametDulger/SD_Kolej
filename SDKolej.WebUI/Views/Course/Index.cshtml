@model List<SDKolej.Business.DTOs.CourseDto>
@{
    ViewData["Title"] = "Ders Listesi";
}
<h2>Ders Listesi</h2>
<a class="btn btn-primary mb-2" asp-action="Create">Yeni Ders</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Üst Ders</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.ParentCourseId</td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table> 